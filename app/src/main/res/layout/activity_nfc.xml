<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_nfc"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mark.mark.NFC"
    android:background="@drawable/p7_background">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/White"
        android:textSize="21sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView"
        android:layout_marginTop="29dp"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:textColor="@color/White"
        android:textSize="18sp" />

    <Button
        android:text="Scan Fingerprint"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:id="@+id/scanFingerprint"
        android:background="@color/colorHeroPink"
        android:onClick="scanFingerprint"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:fontFamily="sans-serif-medium"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="143dp"
        android:scaleX="4"
        android:scaleY="4"
        app:srcCompat="@drawable/ic_nfc_white_24px"
        android:layout_below="@+id/textInfo"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
